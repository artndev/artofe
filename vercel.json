{
  "version": 2,
  "functions": {
    "server/src/index.js": {
      "runtime": "@vercel/node@18"
    }
  },
  "outputDirectory": "client/build",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "server/src/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "server/src/index.js"
    }
  ],
  "buildCommand": "npm install --prefix server && npm install --prefix client && npm run build --prefix client"
}
