{
  "version": 2,
  "builds": [
    {
      "src": "client/build",
      "use": "@vercel/static-build",
      "config": { "distDir": "statics" }
    },
    {
      "src": "server/dist",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/dist/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "server/dist/index.js"
    }
  ],
  "outputDirectory": "statics",
  "installCommand": "npm i",
  "buildCommand": "npm i --prefix server && npm i --legacy-peer-deps --prefix client && npm run build --prefix client"
}
