{
  "version": 2,
  "builds": [
    {
      "src": "server/src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "server/src/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "server/src/index.js"
    }
  ],
  "installCommand": "npm i --legacy-peer-deps",
  "buildCommand": "npm i --legacy-peer-deps --prefix server && npm i --legacy-peer-deps --prefix client && npm run build --prefix client"
}
