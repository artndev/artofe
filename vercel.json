{
  "version": 2,
  "builds": [
    {
      "src": "server/src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/src/index.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "dist/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "outputDirectory": "client/build",
  "installCommand": "npm i",
  "buildCommand": "npm i --prefix server && npm i --legacy-peer-deps --prefix client && npm run build --prefix client"
}
