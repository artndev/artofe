{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "server/dist/**"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "server/dist/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "server/dist/index.js"
    }
  ],
  "installCommand": "npm i",
  "buildCommand": "npm i --prefix server && npm i --legacy-peer-deps --prefix client && npm run build --prefix client"
}
