{
  "version": 2,
  "builds": [
    {
      "src": "server/dist/**",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server/dist/index.js"
    }
  ],
  "installCommand": "npm i",
  "buildCommand": "npm i --prefix server && npm i --legacy-peer-deps --prefix client && npm run build --prefix client"
}
